<h1>Workout list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Ante</th>
            <th>Buy_in</th>
            <th>Cash_out</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('workout_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.ante }}</td>
            <td>{{ entity.buyin }}</td>
            <td>{{ entity.cashout }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('workout_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('workout_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('workout_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
